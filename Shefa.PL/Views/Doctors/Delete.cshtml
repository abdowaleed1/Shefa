@model SmartHealthcare.Models.Doctor

@{
    ViewBag.Title = "Delete Doctor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-danger">🗑️ Delete Doctor</h2>
    <hr />

    <h4>Are you sure you want to remove this doctor?</h4>
    <div class="mt-3">
        <strong>@Model.FullName</strong><br />
        <span>@Model.Specialization</span><br />
        <span>@Model.MedicalLicenseNumber</span>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.DoctorID)
        <input type="submit" value="Confirm Delete" class="btn btn-danger mt-3" /> |
@Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary mt-3" })
    }
</div>