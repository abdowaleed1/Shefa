@model IEnumerable<SmartHealthcare.Models.Doctor>

@{
    ViewBag.Title = "Doctors";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2 class="text-primary">
                <i class="fas fa-user-md"></i> Doctors Directory
            </h2>
        </div>
        <div class="col-md-6 text-right">
            @if (User.IsInRole("Admin"))
            {
                <a href="@Url.Action("Create", "Doctors")" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Add New Doctor
                </a>
            }
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <i class="fas fa-check-circle"></i> @TempData["Success"]
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="row">
                    @foreach (var doctor in Model)
                    {
                        <div class="col-md-4 col-lg-3 mb-4">
                            <div class="card h-100 doctor-card shadow-sm">
                                <div class="card-body text-center">
                                    <div class="doctor-avatar mb-3">
                                        <i class="fas fa-user-md fa-4x text-primary"></i>
                                    </div>
                                    <h5 class="card-title">Dr. @doctor.FullName</h5>
                                    <p class="text-muted mb-2">
                                        <i class="fas fa-stethoscope"></i> @doctor.Specialization
                                    </p>
                                    <p class="text-muted mb-2">
                                        <i class="fas fa-envelope"></i> @doctor.Email
                                    </p>
                                    <p class="text-muted mb-3">
                                        <i class="fas fa-phone"></i> @doctor.ContactNumber
                                    </p>

                                    <div class="btn-group-vertical w-100" role="group">
                                        <a href="@Url.Action("Details", "Doctors", new { id = doctor.DoctorID })"
                                           class="btn btn-sm btn-info">
                                            <i class="fas fa-eye"></i> View Details
                                        </a>

                                        @if (User.IsInRole("Admin"))
                                        {
                                            <a href="@Url.Action("Edit", "Doctors", new { id = doctor.DoctorID })"
                                               class="btn btn-sm btn-warning">
                                                <i class="fas fa-edit"></i> Edit
                                            </a>
                                            <a href="@Url.Action("Delete", "Doctors", new { id = doctor.DoctorID })"
                                               class="btn btn-sm btn-danger">
                                                <i class="fas fa-trash"></i> Delete
                                            </a>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-user-md fa-4x text-muted mb-3"></i>
                    <h4 class="text-muted">No Doctors Found</h4>
                    <p class="text-muted">There are no doctors in the system yet.</p>
                    @if (User.IsInRole("Admin"))
                    {
                        <a href="@Url.Action("Create", "Doctors")" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Add First Doctor
                        </a>
                    }
                </div>
            }
        </div>
    </div>
</div>

<style>
    .doctor-card {
        border-radius: 10px;
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .doctor-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.15) !important;
        }

    .doctor-avatar {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        background: #f8f9fa;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto;
    }
</style>