@model SmartHealthcare.Models.Doctor

@{
    ViewBag.Title = "Edit Doctor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-warning">✏️ Edit Doctor Details</h2>
    <hr />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.DoctorID)
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    @Html.LabelFor(m => m.Title)
                    @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
                </div>
                <div class="mb-3">
                    @Html.LabelFor(m => m.FirstName)
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                </div>
                <div class="mb-3">
                    @Html.LabelFor(m => m.LastName)
                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                </div>
                <div class="mb-3">
                    @Html.LabelFor(m => m.Specialization)
                    @Html.TextBoxFor(m => m.Specialization, new { @class = "form-control" })
                </div>
            </div>

            <div class="col-md-6">
                <div class="mb-3">
                    @Html.LabelFor(m => m.MedicalLicenseNumber)
                    @Html.TextBoxFor(m => m.MedicalLicenseNumber, new { @class = "form-control" })
                </div>
                <div class="mb-3">
                    @Html.LabelFor(m => m.Email)
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
                <div class="mb-3">
                    @Html.LabelFor(m => m.ContactNumber)
                    @Html.TextBoxFor(m => m.ContactNumber, new { @class = "form-control" })
                </div>
                <div class="mb-3">
                    @Html.LabelFor(m => m.HiringDate)
                    @Html.EditorFor(m => m.HiringDate, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                </div>
            </div>
        </div>

        <div class="form-group mt-3">
            <input type="submit" value="Update Doctor" class="btn btn-primary" />
            @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    }
</div>
