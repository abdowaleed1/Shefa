@model SmartHealthcare.Models.Doctor

@{
    ViewBag.Title = "Add Doctor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-user-md"></i> Add New Doctor
                    </h4>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Create", "Doctors", FormMethod.Post, new { @class = "needs-validation" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>
                                        <i class="fas fa-user"></i> First Name *
                                    </label>
                                    @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control", placeholder = "Enter first name", required = "required" })
                                    @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>
                                        <i class="fas fa-user"></i> Last Name *
                                    </label>
                                    @Html.TextBoxFor(model => model.LastName, new { @class = "form-control", placeholder = "Enter last name", required = "required" })
                                    @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>
                                        <i class="fas fa-envelope"></i> Email *
                                    </label>
                                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", type = "email", placeholder = "doctor@example.com", required = "required" })
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>
                                        <i class="fas fa-phone"></i> Contact Number *
                                    </label>
                                    @Html.TextBoxFor(model => model.ContactNumber, new { @class = "form-control", placeholder = "+91-XXXXXXXXXX", required = "required" })
                                    @Html.ValidationMessageFor(model => model.ContactNumber, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>
                                        <i class="fas fa-stethoscope"></i> Specialization *
                                    </label>
                                    @Html.TextBoxFor(model => model.Specialization, new { @class = "form-control", placeholder = "e.g., Cardiologist", required = "required" })
                                    @Html.ValidationMessageFor(model => model.Specialization, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>
                                        <i class="fas fa-graduation-cap"></i> Qualification *
                                    </label>
                                    @Html.TextBoxFor(model => model.Qualification, new { @class = "form-control", placeholder = "e.g., MBBS, MD", required = "required" })
                                    @Html.ValidationMessageFor(model => model.Qualification, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>
                                        <i class="fas fa-briefcase"></i> Experience (Years) *
                                    </label>
                                    @Html.TextBoxFor(model => model.Experience, new { @class = "form-control", type = "number", min = "0", placeholder = "Years of experience", required = "required" })
                                    @Html.ValidationMessageFor(model => model.Experience, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>
                                        <i class="fas fa-rupee-sign"></i> Consultation Fee *
                                    </label>
                                    @Html.TextBoxFor(model => model.ConsultationFee, new { @class = "form-control", type = "number", step = "0.01", placeholder = "Consultation fee", required = "required" })
                                    @Html.ValidationMessageFor(model => model.ConsultationFee, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label>
                                <i class="fas fa-map-marker-alt"></i> Address
                            </label>
                            @Html.TextAreaFor(model => model.Address, new { @class = "form-control", rows = 3, placeholder = "Enter address" })
                            @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-save"></i> Add Doctor
                            </button>
                            <a href="@Url.Action("Index", "Doctors")" class="btn btn-secondary btn-lg">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}