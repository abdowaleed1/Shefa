@model IEnumerable<SmartHealthcare.Models.Appointment>

@{
    ViewBag.Title = "My Appointments";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2><i class="fas fa-calendar-check"></i> My Appointments</h2>
        </div>
        <div class="col-md-6 text-end">
            <a href="@Url.Action("Create", "Appointments")" class="btn btn-primary">
                <i class="fas fa-plus"></i> Book New Appointment
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        @if (Model != null && Model.Any())
        {
            foreach (var appointment in Model)
            {
                var statusColor = appointment.Status == "Completed" ? "success" :
                                  appointment.Status == "Scheduled" ? "primary" :
                                  appointment.Status == "Cancelled" ? "danger" : "warning";

                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card appointment-card h-100 shadow-sm">
                        <div class="card-header bg-@statusColor text-white">
                            <h5 class="mb-0">
                                <i class="fas fa-user-md"></i> @appointment.Doctor?.FullName
                            </h5>
                        </div>
                        <div class="card-body">
                            <p class="mb-2">
                                <strong><i class="fas fa-calendar"></i> Date & Time:</strong><br />
                                @appointment.AppointmentTime.ToString("dddd, MMMM dd, yyyy")<br />
                                <span class="text-primary">@appointment.AppointmentTime.ToString("hh:mm tt")</span>
                            </p>
                            <p class="mb-2">
                                <strong><i class="fas fa-notes-medical"></i> Reason:</strong><br />
                                @appointment.Reason
                            </p>
                            <p class="mb-2">
                                <strong><i class="fas fa-info-circle"></i> Status:</strong>
                                <span class="badge bg-@statusColor">@appointment.Status</span>
                            </p>
                            <p class="mb-2">
                                <strong><i class="fas fa-rupee-sign"></i> Fees:</strong><br />
                                Doctor Fee: ₹@appointment.DoctorFee<br />
                                Report Fee: ₹@appointment.ReportFee<br />
                                <span class="fw-bold text-primary">Total: ₹@(appointment.DoctorFee + appointment.ReportFee)</span>
                            </p>
                            @if (!string.IsNullOrEmpty(appointment.Notes))
                            {
                                <p class="mb-2">
                                    <strong><i class="fas fa-sticky-note"></i> Notes:</strong><br />
                                    <small>@appointment.Notes</small>
                                </p>
                            }
                        </div>
                        <div class="card-footer bg-light">
                            <a href="@Url.Action("Details", "Appointments", new { id = appointment.AppointmentID })"
                               class="btn btn-sm btn-info">
                                <i class="fas fa-eye"></i> View Details
                            </a>
                            @if (appointment.Status == "Scheduled" && appointment.AppointmentTime > DateTime.Now)
                            {
                                <a href="@Url.Action("Edit", "Appointments", new { id = appointment.AppointmentID })"
                                   class="btn btn-sm btn-warning">
                                    <i class="fas fa-edit"></i> Reschedule
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-info text-center">
                    <i class="fas fa-info-circle fa-3x mb-3"></i>
                    <h4>No Appointments Yet</h4>
                    <p>You haven't booked any appointments. Click the button above to schedule your first appointment.</p>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .appointment-card {
        border: none;
        border-radius: 10px;
        transition: transform 0.2s;
    }

        .appointment-card:hover {
            transform: translateY(-5px);
        }

    .card-header {
        border-radius: 10px 10px 0 0 !important;
    }
</style>