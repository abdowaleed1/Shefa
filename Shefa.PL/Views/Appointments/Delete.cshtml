@model SmartHealthcare.Models.Appointment

@{
    ViewBag.Title = "Delete Appointment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-exclamation-triangle"></i> Delete Appointment
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <strong><i class="fas fa-exclamation-circle"></i> Warning!</strong>
                        Are you sure you want to delete this appointment? This action cannot be undone.
                    </div>

                    <h5 class="mb-3">Appointment Details:</h5>

                    <dl class="row">
                        <dt class="col-sm-4">Appointment ID:</dt>
                        <dd class="col-sm-8">#@Model.AppointmentID</dd>

                        <dt class="col-sm-4">Patient:</dt>
                        <dd class="col-sm-8">
                            @if (Model.Patient != null)
                            {
                                <strong>@Model.Patient.FullName</strong><br>
                                <small class="text-muted">@Model.Patient.Email</small>
                            }
                            else
                            {
                                <span class="text-muted">N/A</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Doctor:</dt>
                        <dd class="col-sm-8">
                            @if (Model.Doctor != null)
                            {
                                <strong>Dr. @Model.Doctor.FullName</strong><br>
                                <small class="text-muted">@Model.Doctor.Specialization</small>
                            }
                            else
                            {
                                <span class="text-muted">N/A</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Date & Time:</dt>
                        <dd class="col-sm-8">
                            <strong>@Model.AppointmentTime.ToString("dddd, MMMM dd, yyyy")</strong><br>
                            <small>@Model.AppointmentTime.ToString("hh:mm tt")</small>
                        </dd>

                        <dt class="col-sm-4">Reason:</dt>
                        <dd class="col-sm-8">@Model.Reason</dd>

                        <dt class="col-sm-4">Status:</dt>
                        <dd class="col-sm-8">
                            @if (Model.Status == "Scheduled")
                            {
                                <span class="badge badge-success">@Model.Status</span>
                            }
                            else if (Model.Status == "Completed")
                            {
                                <span class="badge badge-primary">@Model.Status</span>
                            }
                            else if (Model.Status == "Cancelled")
                            {
                                <span class="badge badge-danger">@Model.Status</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Total Fee:</dt>
                        <dd class="col-sm-8">
                            <strong class="text-success">₹@(Model.DoctorFee + Model.ReportFee)</strong>
                            <br><small class="text-muted">(Doctor: ₹@Model.DoctorFee | Report: ₹@Model.ReportFee)</small>
                        </dd>
                    </dl>

                    @using (Html.BeginForm("DeleteConfirmed", "Appointments", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.Hidden("id", Model.AppointmentID)

                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-danger btn-lg">
                                <i class="fas fa-trash"></i> Yes, Delete Appointment
                            </button>
                            <a href="@Url.Action("Index", "Appointments")" class="btn btn-secondary btn-lg">
                                <i class="fas fa-arrow-left"></i> No, Go Back
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>