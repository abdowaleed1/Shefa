@model SmartHealthcare.Models.Patient

@{
    ViewBag.Title = "Add Patient";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-user-plus"></i> Add New Patient
                    </h4>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Create", "Patients", FormMethod.Post, new { @class = "needs-validation" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>
                                        <i class="fas fa-user"></i> First Name *
                                    </label>
                                    @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control", placeholder = "Enter first name", required = "required" })
                                    @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>
                                        <i class="fas fa-user"></i> Last Name *
                                    </label>
                                    @Html.TextBoxFor(model => model.LastName, new { @class = "form-control", placeholder = "Enter last name", required = "required" })
                                    @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>
                                        <i class="fas fa-venus-mars"></i> Gender *
                                    </label>
                                    @Html.DropDownListFor(model => model.Gender,
                                        new SelectList(new[] { "Male", "Female", "Other" }),
                                        "Select Gender",
                                        new { @class = "form-control", required = "required" })
                                    @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>
                                        <i class="fas fa-calendar"></i> Date of Birth *
                                    </label>
                                    @Html.TextBoxFor(model => model.DateOfBirth, new { @class = "form-control", type = "date", required = "required" })
                                    @Html.ValidationMessageFor(model => model.DateOfBirth, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>
                                        <i class="fas fa-envelope"></i> Email *
                                    </label>
                                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", type = "email", placeholder = "patient@example.com", required = "required" })
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>
                                        <i class="fas fa-phone"></i> Contact Number *
                                    </label>
                                    @Html.TextBoxFor(model => model.ContactNumber, new { @class = "form-control", placeholder = "+91-XXXXXXXXXX", required = "required" })
                                    @Html.ValidationMessageFor(model => model.ContactNumber, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label>
                                <i class="fas fa-map-marker-alt"></i> Address *
                            </label>
                            @Html.TextAreaFor(model => model.Address, new { @class = "form-control", rows = 3, placeholder = "Enter full address", required = "required" })
                            @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>
                                        <i class="fas fa-tint"></i> Blood Group
                                    </label>
                                    @Html.DropDownListFor(model => model.BloodGroup,
                                        new SelectList(new[] { "A+", "A-", "B+", "B-", "AB+", "AB-", "O+", "O-" }),
                                        "Select Blood Group",
                                        new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.BloodGroup, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-8">
                                <div class="form-group">
                                    <label>
                                        <i class="fas fa-allergies"></i> Allergies
                                    </label>
                                    @Html.TextBoxFor(model => model.Allergies, new { @class = "form-control", placeholder = "e.g., Penicillin, Peanuts" })
                                    @Html.ValidationMessageFor(model => model.Allergies, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label>
                                <i class="fas fa-notes-medical"></i> Medical History
                            </label>
                            @Html.TextAreaFor(model => model.MedicalHistory, new { @class = "form-control", rows = 3, placeholder = "Previous medical conditions, surgeries, etc." })
                            @Html.ValidationMessageFor(model => model.MedicalHistory, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-save"></i> Save Patient
                            </button>
                            <a href="@Url.Action("Index", "Patients")" class="btn btn-secondary btn-lg">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}