@model SmartHealthcare.Models.Patient
@{
    ViewBag.Title = "Edit Patient";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-warning mb-4"><i class="bi bi-pencil-square"></i> Edit Patient</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.PatientID)

        <div class="card shadow p-4">
            <div class="mb-3">
                @Html.LabelFor(m => m.FullName)
                @Html.TextBoxFor(m => m.FullName, new { @class = "form-control" })
            </div>
            <div class="mb-3">
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
            <div class="mb-3">
                @Html.LabelFor(m => m.ContactNumber)
                @Html.TextBoxFor(m => m.ContactNumber, new { @class = "form-control" })
            </div>
            <div class="mb-3">
                @Html.LabelFor(m => m.Address)
                @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
            </div>

            <button type="submit" class="btn btn-warning"><i class="bi bi-save"></i> Update</button>
            <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
        </div>
    }
</div>
