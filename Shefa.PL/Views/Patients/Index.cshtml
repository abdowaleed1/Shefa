@model IEnumerable<SmartHealthcare.Models.Patient>

@{
    ViewBag.Title = "All Patients";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2><i class="fas fa-users"></i> All Patients</h2>
        </div>
        <div class="col-md-6 text-end">
            @if (User.IsInRole("Admin"))
            {
                <a href="@Url.Action("Create", "Patients")" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Add New Patient
                </a>
            }
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead class="table-primary">
                        <tr>
                            <th>Patient ID</th>
                            <th>Full Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Date of Birth</th>
                            <th>Gender</th>
                            <th>Blood Group</th>
                            <th>Registration Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var patient in Model)
                            {
                                <tr>
                                    <td><strong>#@patient.PatientID</strong></td>
                                    <td>@patient.FullName</td>
                                    <td>@patient.Email</td>
                                    <td>@patient.Phone</td>
                                    <td>@patient.DateOfBirth.("dd/MM/yyyy")</td>
                                    <td>@patient.Gender</td>
                                    <td><span class="badge bg-danger">@patient.BloodGroup</span></td>
                                    <td>@patient.RegistrationDate.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <a href="@Url.Action("Details", "Patients", new { id = patient.PatientID })"
                                           class="btn btn-sm btn-info" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        @if (User.IsInRole("Admin"))
                                        {
                                            <a href="@Url.Action("Edit", "Patients", new { id = patient.PatientID })"
                                               class="btn btn-sm btn-warning" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a href="@Url.Action("Delete", "Patients", new { id = patient.PatientID })"
                                               class="btn btn-sm btn-danger" title="Delete"
                                               onclick="return confirm('Are you sure you want to delete this patient?');">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="9" class="text-center text-muted">
                                    <i class="fas fa-info-circle"></i> No patients found.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
        border-radius: 10px;
    }

    .table th {
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.85rem;
    }

    .btn-sm {
        margin: 0 2px;
    }
</style>