@model SmartHealthcare.Models.Patient
@{
    ViewBag.Title = "Delete Patient";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-danger mb-4"><i class="bi bi-trash"></i> Delete Patient</h2>

    <div class="alert alert-danger">Are you sure you want to delete this patient?</div>

    <div class="card shadow p-4">
        <p><strong>@Model.FullName</strong> — @Model.Email</p>

        @using (Html.BeginForm("DeleteConfirmed", "Patients", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.PatientID)
            <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i> Confirm Delete</button>
            <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
        }
    </div>
</div>
