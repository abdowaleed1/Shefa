@model IEnumerable<SmartHealthcare.Models.Doctor>

@{
    ViewBag.Title = "Manage Doctors";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2><i class="fas fa-user-md"></i> Manage Doctors</h2>
            <p class="text-muted">View and manage all doctors in the system</p>
        </div>
        <div class="col-md-6 text-end">
            <a href="@Url.Action("Create", "Doctors")" class="btn btn-primary">
                <i class="fas fa-plus"></i> Add New Doctor
            </a>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead class="table-primary">
                        <tr>
                            <th>Doctor ID</th>
                            <th>Full Name</th>
                            <th>Specialization</th>
                            <th>Qualification</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Experience</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var doctor in Model)
                            {
                                <tr>
                                    <td><strong>#@doctor.DoctorID</strong></td>
                                    <td>@doctor.FullName</td>
                                    <td><span class="badge bg-info">@doctor.Specialization</span></td>
                                    <td>@doctor.Qualification</td>
                                    <td>@doctor.Email</td>
                                    <td>@doctor.Phone</td>
                                    <td>@doctor.Experience years</td>
                                    <td>
                                        <a href="@Url.Action("Details", "Doctors", new { id = doctor.DoctorID })"
                                           class="btn btn-sm btn-info" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="@Url.Action("Edit", "Doctors", new { id = doctor.DoctorID })"
                                           class="btn btn-sm btn-warning" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="@Url.Action("Delete", "Doctors", new { id = doctor.DoctorID })"
                                           class="btn btn-sm btn-danger" title="Delete"
                                           onclick="return confirm('Are you sure you want to delete this doctor?');">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center text-muted">
                                    <i class="fas fa-info-circle"></i> No doctors found.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
        border-radius: 10px;
    }

    .btn-sm {
        margin: 0 2px;
    }
</style>