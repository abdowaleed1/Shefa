@model SmartHealthcare.Models.Schedule

@{
    ViewBag.Title = "Delete Schedule";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="fas fa-exclamation-triangle"></i> Delete Schedule</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <strong>Warning!</strong> Are you sure you want to delete this schedule?
                    </div>

                    <dl class="row">
                        <dt class="col-sm-4">Doctor Name:</dt>
                        <dd class="col-sm-8">@Model.Doctor?.FullName</dd>

                        <dt class="col-sm-4">Day of Week:</dt>
                        <dd class="col-sm-8">@Model.DayOfWeek</dd>

                        <dt class="col-sm-4">Time Slot:</dt>
                        <dd class="col-sm-8">@Model.StartTime.ToString(@"hh\:mm") - @Model.EndTime.ToString(@"hh\:mm")</dd>
                    </dl>

                    @using (Html.BeginForm("Delete", "Schedules", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.ScheduleID)

                        <div class="text-right">
                            <a href="@Url.Action("Index")" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Delete Schedule
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
