<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shefa</title>

 <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-color: #0070cd;
            --text-dark: #2d2d2d;
            --bg-light: #f4f6f8;
            --text-muted: #6c757d;
        }

        body {
            font-family: 'Poppins', sans-serif;
            color: var(--text-dark);
            background-color: white;
        }

        /* Utility Styles */
        .text-primary-custom {
            color: var(--primary-color) !important;
        }

        .bg-primary-custom {
            background-color: var(--primary-color) !important;
        }

        .bg-light-custom {
            background-color: var(--bg-light) !important;
        }

        .section-padding {
            padding: 90px 0;
        }

        /* Navbar */
        .navbar-custom {
            background-color: white;
            box-shadow: 0 2px 15px rgba(0,0,0,0.05);
            padding: 15px 0;
        }

        .navbar-brand {
            font-weight: 800;
            color: var(--primary-color) !important;
            font-size: 1.8rem;
            letter-spacing: -1px;
        }

        /* Buttons */
        .btn-primary-custom {
            background-color: var(--primary-color);
            border: none;
            color: white;
            padding: 12px 30px;
            border-radius: 50rem;
            font-weight: 600;
            transition: all 0.3s;
        }

            .btn-primary-custom:hover {
                background-color: #0056b3;
                transform: translateY(-2px);
                box-shadow: 0 8px 20px rgba(0,112,205,0.3);
            }

        /* Hero Section */
        .hero-section {
            background: linear-gradient(135deg, #e3f2fd 0%, #fff 100%);
            padding: 140px 0 100px;
        }

        .hero-title {
            font-size: 3.2rem;
            font-weight: 800;
            line-height: 1.2;
        }

        .hero-subtitle {
            font-size: 1.1rem;
            color: var(--text-muted);
            margin-top: 20px;
        }

        /* Feature Sections (New Design) */
        .platform-section {
            padding: 60px 0;
            border-bottom: 1px solid #eee;
        }

        .platform-title {
            font-size: 2rem;
            font-weight: 700;
        }

        .platform-icon-box {
            background-color: var(--primary-color);
            color: white;
            padding: 20px;
            border-radius: 15px;
            font-size: 2.5rem;
            display: inline-block;
            margin-bottom: 20px;
        }

        .platform-list li {
            margin-bottom: 10px;
            color: var(--text-muted);
        }

        .platform-list i {
            color: #198754;
            margin-right: 10px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-custom sticky-top">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" href="#">
                    <i class="fas fa-heartbeat me-2"></i> Shefa
                </a>

                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto align-items-center">
                        <li class="nav-item"><a class="nav-link fw-bold text-dark mx-2" asp-action="Index" asp-controller="Patient">Patient</a></li>
                        <li class="nav-item"><a class="nav-link fw-bold text-dark mx-2" asp-action="Index" asp-controller="Doctor">Doctor</a></li>
                        <li class="nav-item"><a class="nav-link fw-bold text-dark mx-2" asp-action="Index" asp-controller="Clinic">Clinic</a></li>
                        <li class="nav-item"><a class="nav-link fw-bold text-dark mx-2" asp-action="Index" asp-controller="Admin">Admin</a></li>
                        <li class="nav-item ms-3">
                            <a class="btn btn-outline-primary rounded-pill px-4 fw-bold btn-sm" href="#">Login</a>
                        </li>
                        <li class="nav-item ms-2">
                            <a class="btn btn-primary-custom fw-bold btn-sm" href="#">Sign Up</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="bg-primary-custom py-5">
        <div class="container">
            <div class="row text-white">
                <div class="col-md-4 mb-4">
                    <h5 class="fw-bold text-white mb-3"><i class="fas fa-heartbeat me-2"></i> Shefa</h5>
                    <p class="small">The unified platform for modern clinics and informed patients.</p>
                </div>
                <div class="col-md-4 mb-4">
                    <h6 class="text-white fw-bold">Contact Us</h6>
                    <p class="small mb-1"><i class="fas fa-envelope me-2"></i> support@shefa.com</p>
                    <p class="small"><i class="fas fa-phone me-2"></i> +12 345 6789</p>
                </div>
            </div>
            <div class="text-center pt-4 border-top border-secondary">
                <p class="mb-0 text-white">&copy; @DateTime.Now.Year <strong class="text-primary-custom">Shefa</strong>. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
