<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shefa</title>

 <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <style>
        :root { --primary-color: #0070cd; --text-dark: #2d2d2d; }
        body { font-family: 'Poppins', sans-serif; background-color: #f4f6f8; color: var(--text-dark); }

   
        .navbar-custom { background-color: white; box-shadow: 0 2px 15px rgba(0,0,0,0.05); padding: 15px 0; }
        .navbar-brand { font-weight: 700; color: var(--primary-color) !important; font-size: 1.5rem; letter-spacing: -0.5px; }

 
        .badge { padding: 0.5em 1em; font-weight: 600; border-radius: 50rem; letter-spacing: 0.3px; }
        .badge-soft-primary { background-color: rgba(0, 112, 205, 0.1); color: #0070cd; }
        .badge-soft-success { background-color: rgba(25, 135, 84, 0.1); color: #198754; }
        .badge-soft-warning { background-color: rgba(255, 193, 7, 0.1); color: #997404; }
        .badge-soft-danger  { background-color: rgba(220, 53, 69, 0.1); color: #dc3545; }
        .badge-soft-info    { background-color: rgba(13, 202, 240, 0.1); color: #055160; }
        .badge-soft-secondary { background-color: rgba(108, 117, 125, 0.1); color: #6c757d; }

        .text-primary-custom { color: var(--primary-color) !important; }
        .bg-primary-custom { background-color: var(--primary-color) !important; }
        .btn-primary-custom { background-color: var(--primary-color); border: none; color: white; padding: 10px 24px; border-radius: 50rem; transition: all 0.2s; }
        .btn-primary-custom:hover { background-color: #0056b3; transform: translateY(-1px); box-shadow: 0 4px 12px rgba(0,112,205,0.2); }
        .card-custom { border: none; border-radius: 16px; box-shadow: 0 4px 20px rgba(0,0,0,0.03); background: white; transition: transform 0.2s; }
        .card-custom:hover { transform: translateY(-3px); }
        .hero-section { background: linear-gradient(135deg, #0070cd 0%, #00c6ff 100%); padding: 80px 0; color: white; }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-custom sticky-top">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" href="#">
                    <i class="fas fa-heartbeat me-2"></i> Shefa
                </a>

                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto align-items-center">
                        <li class="nav-item"><a class="nav-link fw-bold text-dark mx-2" asp-action="Index" asp-controller="Patient">Patient</a></li>
                        <li class="nav-item"><a class="nav-link fw-bold text-dark mx-2" asp-action="Index" asp-controller="Doctor">Doctor</a></li>
                        <li class="nav-item"><a class="nav-link fw-bold text-dark mx-2" asp-action="Index" asp-controller="Clinic">Clinic</a></li>
                        <li class="nav-item"><a class="nav-link fw-bold text-dark mx-2" asp-action="Index" asp-controller="Admin">Admin</a></li>
                        <li class="nav-item ms-3">
                            <a class="btn btn-outline-primary rounded-pill px-4 fw-bold btn-sm" href="#">Login</a>
                        </li>
                        <li class="nav-item ms-2">
                            <a class="btn btn-primary-custom fw-bold btn-sm" href="#">Sign Up</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="bg-white py-4 mt-5 border-top">
        <div class="container text-center">
            <p class="mb-0 text-muted">&copy; @DateTime.Now.Year <strong class="text-primary-custom">Shefa</strong>. All rights reserved.</p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
