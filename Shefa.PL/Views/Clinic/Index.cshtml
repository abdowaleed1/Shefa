@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main role="main">

    <div class="container-fluid py-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h3 class="fw-bold text-dark">City Center Clinic Dashboard</h3>
            <button class="btn btn-primary-custom shadow-sm"><i class="fas fa-plus me-2"></i>Add Doctor</button>
        </div>

        <div class="row g-4 mb-5">
            <div class="col-md-3">
                <div class="card card-custom h-100 p-4">
                    <p class="text-muted small fw-bold text-uppercase mb-2">Total Doctors</p>
                    <div class="d-flex justify-content-between align-items-end">
                        <h2 class="fw-bold mb-0">14</h2> <span class="badge badge-soft-info"><i class="fas fa-user-md me-1"></i>Specialists</span>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card card-custom h-100 p-4">
                    <p class="text-muted small fw-bold text-uppercase mb-2">Total Revenue (Month)</p>
                    <div class="d-flex justify-content-between align-items-end">
                        <h2 class="fw-bold mb-0">$35,200</h2> <span class="badge badge-soft-success">Profit</span>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card card-custom h-100 p-4">
                    <p class="text-muted small fw-bold text-uppercase mb-2">Upcoming Appointments</p>
                    <div class="d-flex justify-content-between align-items-end">
                        <h2 class="fw-bold mb-0">210</h2> <span class="badge badge-soft-primary">High Load</span>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card card-custom h-100 p-4">
                    <p class="text-muted small fw-bold text-uppercase mb-2">Clinic Rating</p>
                    <div class="d-flex justify-content-between align-items-end">
                        <h2 class="fw-bold mb-0">4.5</h2> <span class="badge badge-soft-warning"><i class="fas fa-star me-1"></i>Good</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="row g-4">
            <div class="col-lg-8">
                <h4 class="fw-bold mb-3">Associated Doctors</h4>
                <div class="row g-3 mb-5">
                    <div class="col-md-6">
                        <div class="card card-custom h-100 p-3">
                            <div class="d-flex align-items-center">
                                <img src="https://via.placeholder.com/60" class="rounded-circle me-3" alt="Dr">
                                <div class="flex-grow-1">
                                    <h6 class="fw-bold mb-0">Dr. Sarah Ahmed</h6>
                                    <span class="badge badge-soft-info mt-1">Cardiology</span>
                                </div>
                                <div class="ms-2 d-flex gap-1">
                                    <button class="btn btn-sm btn-outline-primary rounded-pill px-3">Move</button>
                                    <button class="btn btn-sm btn-outline-danger rounded-pill px-3">Remove</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card card-custom h-100 p-3">
                            <div class="d-flex align-items-center">
                                <img src="https://via.placeholder.com/60" class="rounded-circle me-3" alt="Dr">
                                <div class="flex-grow-1">
                                    <h6 class="fw-bold mb-0">Dr. John Doe</h6>
                                    <span class="badge badge-soft-info mt-1">General</span>
                                </div>
                                <div class="ms-2 d-flex gap-1">
                                    <button class="btn btn-sm btn-outline-primary rounded-pill px-3">Move</button>
                                    <button class="btn btn-sm btn-outline-danger rounded-pill px-3">Remove</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card card-custom">
                    <div class="card-header bg-white border-0 pt-4 pb-2">
                        <h5 class="fw-bold">Monthly Financial Summary</h5>
                    </div>
                    <div class="table-responsive p-3">
                        <table class="table table-hover align-middle">
                            <thead class="bg-light rounded-3">
                                <tr>
                                    <th class="ps-4 rounded-start">Doctor Name</th>
                                    <th>Appointments</th>
                                    <th>Revenue</th>
                                    <th>Commission</th>
                                    <th class="text-end pe-4 rounded-end">Net</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td class="ps-4 fw-bold">Dr. Sarah Ahmed</td>
                                    <td class="text-muted">150</td>
                                    <td class="fw-bold text-success">$9,000</td>
                                    <td class="fw-bold text-danger">$900</td>
                                    <td class="text-end pe-4 fw-bold">$8,100</td>
                                </tr>
                                <tr>
                                    <td class="ps-4 fw-bold">Dr. John Doe</td>
                                    <td class="text-muted">110</td>
                                    <td class="fw-bold text-success">$6,600</td>
                                    <td class="fw-bold text-danger">$660</td>
                                    <td class="text-end pe-4 fw-bold">$5,940</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card card-custom h-100 p-4">
                    <h5 class="fw-bold mb-4">Daily Snapshot</h5>
                    <div class="d-flex justify-content-between mb-3 border-bottom pb-3">
                        <span class="text-muted">Today's Appts</span>
                        <h5 class="fw-bold">45</h5>
                    </div>
                    <div class="d-flex justify-content-between mb-3">
                        <span class="text-muted">Est. Revenue</span>
                        <h5 class="fw-bold text-success">$2,400</h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

