
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main role="main">
    <div class="container py-4">
        <h3 class="fw-bold mb-4">Edit Patient Profile</h3>

        <div class="card card-custom p-4 p-md-5">
            <form>
                <h5 class="fw-bold text-primary-custom mb-4 border-bottom pb-2">Personal Information</h5>

                <div class="row g-3 mb-4">
                    <div class="col-md-6">
                        <label for="firstName" class="form-label fw-bold">First Name</label>
                        <input type="text" class="form-control rounded-3 p-3" id="firstName" value="Ahmed">
                    </div>
                    <div class="col-md-6">
                        <label for="lastName" class="form-label fw-bold">Last Name</label>
                        <input type="text" class="form-control rounded-3 p-3" id="lastName" value="Hassan">
                    </div>
                    <div class="col-md-6">
                        <label for="dob" class="form-label fw-bold">Date of Birth</label>
                        <input type="date" class="form-control rounded-3 p-3" id="dob" value="1990-01-01">
                    </div>
                    <div class="col-md-6">
                        <label for="gender" class="form-label fw-bold">Gender</label>
                        <select id="gender" class="form-select rounded-3 p-3">
                            <option>Male</option>
                            <option selected>Female</option>
                        </select>
                    </div>
                </div>

                <h5 class="fw-bold text-primary-custom mb-4 border-bottom pb-2 mt-5">Contact Details</h5>

                <div class="row g-3 mb-4">
                    <div class="col-md-6">
                        <label for="email" class="form-label fw-bold">Email Address</label>
                        <input type="email" class="form-control rounded-3 p-3" id="email" value="ahmed.hassan@example.com">
                    </div>
                    <div class="col-md-6">
                        <label for="phone" class="form-label fw-bold">Phone Number</label>
                        <input type="tel" class="form-control rounded-3 p-3" id="phone" value="+201012345678">
                    </div>
                    <div class="col-12">
                        <label for="address" class="form-label fw-bold">Address</label>
                        <input type="text" class="form-control rounded-3 p-3" id="address" value="123 Al Ahly St., Cairo">
                    </div>
                </div>

                <h5 class="fw-bold text-primary-custom mb-4 border-bottom pb-2 mt-5">Medical Information</h5>

                <div class="mb-4">
                    <label for="allergies" class="form-label fw-bold">Allergies (if any)</label>
                    <textarea class="form-control rounded-3" id="allergies" rows="3">Penicillin, Dust</textarea>
                </div>

                <div class="d-flex justify-content-end gap-3 mt-5">
                    <a href="Patient.html" class="btn btn-outline-secondary rounded-pill px-4 fw-bold">Cancel</a>
                    <button type="submit" class="btn btn-primary-custom rounded-pill px-4 fw-bold">
                        <i class="fas fa-save me-2"></i>Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</main>
