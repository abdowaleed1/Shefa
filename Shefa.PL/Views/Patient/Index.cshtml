
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<main role="main">

    <div class="container-fluid py-4">
        <div class="row g-4">
            <div class="col-lg-4">
                <div class="card card-custom text-center p-4 mb-4">
                    <img src="https://via.placeholder.com/120" class="rounded-circle shadow mb-3" alt="Profile">
                    <h4 class="fw-bold">Ahmed Hassan</h4>
                    <span class="badge badge-soft-primary mb-3">Patient ID: SHF-221</span>

                    <a class="btn btn-outline-primary btn-sm rounded-pill w-100 fw-bold" asp-action="Edit" asp-controller="Patient">Edit Profile</a>
                </div>

                <div class="card card-custom p-4">
                    <h6 class="fw-bold mb-3 text-uppercase small text-muted">My Information</h6>
                    <p class="mb-2"><i class="fas fa-calendar-alt text-primary-custom me-2"></i> **DOB:** 01/01/1990</p>
                    <p class="mb-2"><i class="fas fa-venus-mars text-primary-custom me-2"></i> **Gender:** Male</p>
                    <p class="mb-2"><i class="fas fa-phone text-primary-custom me-2"></i> **Phone:** +201012345678</p>
                    <p class="mb-2"><i class="fas fa-envelope text-primary-custom me-2"></i> **Email:** ahmed.hassan@ex.com</p>
                    <p class="mb-0"><i class="fas fa-map-marker-alt text-primary-custom me-2"></i> **Address:** 123 Al Ahly St., Cairo</p>

                    <h6 class="fw-bold mb-3 text-uppercase small text-muted mt-4">Medical Alerts</h6>
                    <div class="p-3 bg-danger bg-opacity-10 rounded-3">
                        <p class="mb-1 fw-bold text-danger"><i class="fas fa-exclamation-triangle me-2"></i>Known Allergies:</p>
                        <small class="text-danger">Penicillin, Dust.</small>
                    </div>
                </div>
            </div>

            <div class="col-lg-8">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h3 class="fw-bold">My Dashboard</h3>

                    <button type="button" class="btn btn-primary-custom shadow-sm fw-bold" data-bs-toggle="modal" data-bs-target="#bookAppointmentModal">
                        <i class="fas fa-calendar-plus me-2"></i>Book New Appointment
                    </button>
                </div>

                <div class="row g-4 mb-4">
                    <div class="col-md-6">
                        <div class="card card-custom p-4">
                            <h5 class="fw-bold mb-3 text-primary-custom"><i class="fas fa-clock me-2"></i>Upcoming Appointment</h5>
                            <div class="d-flex justify-content-between mb-2">
                                <small class="text-muted">Doctor:</small> <span class="fw-bold">Dr. Emily White</span>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <small class="text-muted">Specialty:</small> <span class="badge badge-soft-primary">Dermatology</span>
                            </div>
                            <div class="d-flex justify-content-between mb-3 border-bottom pb-3">
                                <small class="text-muted">Date/Time:</small> <span class="fw-bold">15/Oct/2025 at 09:00 AM</span>
                            </div>
                            <div class="d-flex gap-2">
                                <button class="btn btn-sm btn-outline-danger w-50 rounded-pill">Cancel</button>
                                <button class="btn btn-sm btn-primary-custom w-50 rounded-pill">Reschedule</button>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card card-custom p-4">
                            <h5 class="fw-bold mb-3 text-success"><i class="fas fa-chart-line me-2"></i>Recent Activity</h5>
                            <div class="d-flex justify-content-between mb-2">
                                <small class="text-muted">Last Visit:</small> <span class="fw-bold">15/Oct/2025</span>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <small class="text-muted">Total Appts:</small> <span class="fw-bold">5</span>
                            </div>
                            <div class="d-flex justify-content-between mb-3 border-bottom pb-3">
                                <small class="text-muted">Outstanding Bills:</small> <span class="fw-bold text-success">$0.00</span>
                            </div>
                            <button class="btn btn-sm btn-outline-success w-100 rounded-pill">Pay Bill</button>
                        </div>
                    </div>
                </div>

                <div class="card card-custom">
                    <div class="card-header bg-white border-0 pt-4 pb-2">
                        <h5 class="fw-bold">Medical Records Summary</h5>
                    </div>
                    <div class="card-body px-4 pb-4">
                        <div class="list-group list-group-flush">
                            <a href="#" class="list-group-item list-group-item-action border-0 px-0 py-3">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1 fw-bold text-dark"><i class="fas fa-notes-medical text-primary-custom me-2"></i>Consultation (Dermatology)</h6>
                                    <small class="text-muted">15/Oct/2025</small>
                                </div>
                                <small class="text-muted d-block ms-4">Diagnosis: Mild Eczema</small>
                            </a>
                            <a href="#" class="list-group-item list-group-item-action border-0 px-0 py-3">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1 fw-bold text-dark"><i class="fas fa-file-medical text-primary-custom me-2"></i>Blood Results</h6>
                                    <small class="text-muted">05/Oct/2025</small>
                                </div>
                                <small class="text-muted d-block ms-4">Uploaded by Dr. Alan</small>
                            </a>
                            <a href="#" class="list-group-item list-group-item-action border-0 px-0 py-3">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1 fw-bold text-dark"><i class="fas fa-file-prescription text-primary-custom me-2"></i>Rx: Amoxicillin</h6>
                                    <small class="text-muted">01/Aug/2025</small>
                                </div>
                                <small class="text-muted d-block ms-4">Uploaded by Dr. Emily</small>
                            </a>
                        </div>
                        <a  class="btn btn-outline-secondary w-100 rounded-pill mt-3 fw-bold" asp-action="PatientMedicalHistory" asp-controller="Patient">View All History</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<div class="modal fade" id="bookAppointmentModal" tabindex="-1" aria-labelledby="bookAppointmentModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content border-0 rounded-4">
            <div class="modal-header">
                <h5 class="modal-title fw-bold text-primary-custom" id="bookAppointmentModalLabel"><i class="fas fa-calendar-plus me-2"></i>Book New Appointment</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-4">
                <form id="bookAppointmentForm">
                    <div class="mb-4">
                        <label for="specialty" class="form-label fw-bold">1. Choose Specialty</label>
                        <select id="specialty" class="form-select rounded-3 p-3">
                            <option selected disabled>Select Specialty...</option>
                            <option>Dermatology</option>
                            <option>Cardiology</option>
                            <option>General Medicine</option>
                        </select>
                    </div>

                    <div class="row g-3 mb-4">
                        <div class="col-md-6">
                            <label for="doctor" class="form-label fw-bold">2. Select Doctor (Optional)</label>
                            <select id="doctor" class="form-select rounded-3 p-3">
                                <option selected>Any Available Doctor</option>
                                <option>Dr. Emily White</option>
                                <option>Dr. John Doe</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label for="date" class="form-label fw-bold">3. Preferred Date</label>
                            <input type="date" class="form-control rounded-3 p-3" id="date">
                        </div>
                    </div>

                    <div class="mb-4">
                        <label for="reason" class="form-label fw-bold">4. Reason for Visit</label>
                        <textarea class="form-control rounded-3" id="reason" rows="3" placeholder="Briefly describe your symptoms or reason for appointment."></textarea>
                    </div>

                    <p class="text-muted small fw-bold mt-4">Available Slots on Selected Date (Example: Dr. Emily)</p>
                    <div class="d-flex flex-wrap gap-2">
                        <button type="button" class="btn btn-sm btn-outline-success rounded-pill px-3">09:00 AM</button>
                        <button type="button" class="btn btn-sm btn-success rounded-pill px-3">10:30 AM</button>
                        <button type="button" class="btn btn-sm btn-outline-success rounded-pill px-3">02:00 PM</button>
                    </div>
                </form>
            </div>
            <div class="modal-footer border-0">
                <button type="button" class="btn btn-outline-secondary rounded-pill px-4 fw-bold" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary-custom rounded-pill px-4 fw-bold" form="bookAppointmentForm">
                    <i class="fas fa-calendar-check me-2"></i>Confirm Booking
                </button>
            </div>
        </div>
    </div>
</div>


