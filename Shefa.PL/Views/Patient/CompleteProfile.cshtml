@model SmartHealthcare.Models.Patient
@{
    ViewBag.Title = "Complete Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="complete-profile">
    <div class="profile-container">
        <h2>🩺 Complete Your Profile</h2>

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-error">@TempData["Error"]</div>
        }
        else if (TempData["Success"] != null)
        {
            <div class="alert alert-success">@TempData["Success"]</div>
        }

        @using (Html.BeginForm("CompleteProfile", "Patient", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label>First Name</label>
                @Html.TextBoxFor(m => m.FirstName, new { @class = "input", placeholder = "John" })
            </div>

            <div class="form-group">
                <label>Last Name</label>
                @Html.TextBoxFor(m => m.LastName, new { @class = "input", placeholder = "Doe" })
            </div>


            <div class="form-group">
                <label>Date of Birth</label>
                @Html.TextBoxFor(m => m.DateOfBirth, "{0:yyyy-MM-dd}", new { @class = "input", type = "date" })
            </div>

            <div class="form-group">
                <label>Gender</label>
                @Html.DropDownListFor(m => m.Gender,
                    new SelectList(new List<SelectListItem>
                    {
                        new SelectListItem{ Text="Male", Value="M" },
                        new SelectListItem{ Text="Female", Value="F" },
                        new SelectListItem{ Text="Other", Value="O" }
                    }, "Value", "Text"), "-- Select Gender --", new { @class = "input" })
            </div>

            <div class="form-group">
                <label>Blood Group</label>
                @Html.DropDownListFor(m => m.BloodGroup,
                    new SelectList(new List<string> { "A+", "A-", "B+", "B-", "AB+", "AB-", "O+", "O-" }),
                    "-- Select Blood Group --", new { @class = "input" })
            </div>

            <div class="form-group">
                <label>Contact Number</label>
                @Html.TextBoxFor(m => m.ContactNumber, new { @class = "input", placeholder = "+91 9876543210" })
            </div>

            <div class="form-group">
                <label>Email</label>
                @Html.TextBoxFor(m => m.Email, new { @class = "input", type = "email", placeholder = "patient@example.com" })
            </div>

            <div class="form-group">
                <label>Address</label>
                @Html.TextAreaFor(m => m.Address, new { @class = "input", placeholder = "Enter your address", rows = "3" })
            </div>

            <div class="form-group">
                <label>Emergency Contact</label>
                @Html.TextBoxFor(m => m.EmergencyContact, new { @class = "input", placeholder = "+91 9876543210" })
            </div>

            <div class="form-group">
                <label>Medical History</label>
                @Html.TextAreaFor(m => m.MedicalHistory, new { @class = "input", placeholder = "Enter any medical history", rows = "4" })
            </div>

            <button type="submit" class="btn-save">💾 Save Profile</button>
        }
    </div>
</section>

<style>
    .complete-profile {
        display: flex;
        justify-content: center;
        align-items: flex-start;
        min-height: 100vh;
        background: #f4f7fa;
        padding: 40px 0;
    }

    .profile-container {
        background: white;
        padding: 40px 50px;
        border-radius: 15px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 600px;
    }

    h2 {
        text-align: center;
        color: #2a5d9f;
        margin-bottom: 30px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        display: block;
        font-weight: 600;
        margin-bottom: 8px;
        color: #333;
    }

    .input {
        width: 100%;
        padding: 10px 12px;
        border: 1px solid #ccc;
        border-radius: 8px;
        font-size: 15px;
        transition: border-color 0.3s ease;
    }

        .input:focus {
            border-color: #2a5d9f;
            outline: none;
        }

    .btn-save {
        width: 100%;
        background-color: #2a5d9f;
        color: white;
        padding: 12px;
        border: none;
        border-radius: 8px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .btn-save:hover {
            background-color: #1f4373;
        }

    .alert {
        padding: 12px 15px;
        border-radius: 8px;
        margin-bottom: 20px;
        font-weight: 500;
    }

    .alert-success {
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }

    .alert-error {
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
    }
</style>
