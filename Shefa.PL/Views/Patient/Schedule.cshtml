@model IEnumerable<SmartHealthcare.Models.Schedule>

@{
    ViewBag.Title = "Doctor Availability";
    Layout = "~/Views/Patient/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Available Doctor Schedules</h2>

    <div class="row">
        @if (Model != null && Model.Any())
        {
            foreach (var schedule in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-lg border-0 h-100">
                        <div class="card-body">
                            <h5 class="card-title text-primary">@schedule.Doctor.FullName</h5>
                            <p class="mb-2"><strong>Day:</strong> @schedule.DayOfWeek</p>
                            <p class="mb-2">
                                <strong>Time:</strong>
                                @schedule.StartTime.ToString(@"hh\:mm tt")
                                -
                                @schedule.EndTime.ToString(@"hh\:mm tt")
                            </p>
                            <p class="mb-2"><strong>Location:</strong> @schedule.LocationDetails</p>

                            <a href="@Url.Action("BookAppointment", "Patient", new { doctorId = schedule.DoctorID })"
                               class="btn btn-success btn-sm mt-2 w-100">
                                Book Appointment
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center">
                <p class="text-muted fs-5">No doctor schedules are available at the moment.</p>
            </div>
        }
    </div>
</div>

<style>
    .container {
        max-width: 1100px;
    }

    .card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        border-radius: 12px;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 20px rgba(0,0,0,0.15);
        }

    h2 {
        font-weight: 600;
        color: #0d6efd;
    }

    .btn-success {
        border-radius: 8px;
        font-weight: 500;
    }
</style>
