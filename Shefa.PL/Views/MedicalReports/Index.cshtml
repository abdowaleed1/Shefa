@model IEnumerable<SmartHealthcare.Models.MedicalReport>

@{
    ViewBag.Title = "Medical Reports";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2><i class="fas fa-file-medical-alt"></i> Medical Reports</h2>
        </div>
        <div class="col-md-6 text-end">
            @if (User.IsInRole("Admin") || User.IsInRole("Doctor"))
            {
                <a href="@Url.Action("Create", "MedicalReports")" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Create New Report
                </a>
            }
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-primary">
                        <tr>
                            <th>Report ID</th>
                            <th>Patient Name</th>
                            <th>Doctor Name</th>
                            <th>Report Date</th>
                            <th>Diagnosis</th>
                            <th>Treatment</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var report in Model)
                            {
                                <tr>
                                    <td><strong>#@report.MedicalReportID</strong></td>
                                    <td>@report.Appointment?.Patient?.FullName</td>
                                    <td>@report.DoctorName</td>
                                    <td>@report.ReportDate.ToString("dd MMM yyyy, hh:mm tt")</td>
                                    <td>
                                        <span class="text-danger">@report.Diagnosis</span>
                                    </td>
                                    <td>
                                        @if (report.Treatment != null && report.Treatment.Length > 50)
                                        {
                                            @report.Treatment.Substring(0, 50)<text>...</text>
                                        }
                                        else
                                        {
                                            @report.Treatment
                                        }
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Details", "MedicalReports", new { id = report.MedicalReportID })"
                                           class="btn btn-sm btn-info" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </a>

                                        @if (User.IsInRole("Admin") || User.IsInRole("Doctor"))
                                        {
                                            <a href="@Url.Action("Edit", "MedicalReports", new { id = report.MedicalReportID })"
                                               class="btn btn-sm btn-warning" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        }

                                        @if (User.IsInRole("Admin"))
                                        {
                                            <a href="@Url.Action("Delete", "MedicalReports", new { id = report.MedicalReportID })"
                                               class="btn btn-sm btn-danger" title="Delete"
                                               onclick="return confirm('Are you sure you want to delete this report?');">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center text-muted">
                                    <i class="fas fa-info-circle"></i> No medical reports found.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
        border-radius: 10px;
    }

    .btn-sm {
        margin: 0 2px;
    }
</style>