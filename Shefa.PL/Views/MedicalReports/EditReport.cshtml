@model SmartHealthcare.Models.MedicalReport

@{
    ViewBag.Title = "Edit Medical Report";
}

<h2 class="text-center mt-4 mb-4">✏️ Edit Medical Report</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.HiddenFor(model => model.MedicalReportID)

        <div class="form-group">
            @Html.LabelFor(model => model.AppointmentID)
            @Html.DropDownList("AppointmentID", null, "-- Select Appointment --", new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DoctorID)
            @Html.DropDownList("DoctorID", null, "-- Select Doctor --", new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DoctorName)
            @Html.TextBoxFor(model => model.DoctorName, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ReportType)
            @Html.TextBoxFor(model => model.ReportType, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Diagnosis)
            @Html.TextBoxFor(model => model.Diagnosis, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DoctorNotes)
            @Html.TextAreaFor(model => model.DoctorNotes, new { @class = "form-control", rows = 3 })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TestResults)
            @Html.TextAreaFor(model => model.TestResults, new { @class = "form-control", rows = 3 })
        </div>

        <div class="form-group text-center mt-3">
            <input type="submit" value="Save Changes" class="btn btn-warning" />
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    </div>
}
