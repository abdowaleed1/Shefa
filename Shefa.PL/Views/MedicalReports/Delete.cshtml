@model SmartHealthcare.Models.MedicalReport

@{
    ViewBag.Title = "Delete Medical Report";
}

<h2 class="text-center mt-4 mb-4 text-danger">⚠️ Delete Medical Report</h2>

<div class="alert alert-warning text-center">
    Are you sure you want to delete this medical report?
</div>

<div class="card p-4 shadow">
    <dl class="row">
        <dt class="col-sm-3">Doctor Name</dt>
        <dd class="col-sm-9">@Model.DoctorName</dd>

        <dt class="col-sm-3">Report Type</dt>
        <dd class="col-sm-9">@Model.ReportType</dd>

        <dt class="col-sm-3">Diagnosis</dt>
        <dd class="col-sm-9">@Model.Diagnosis</dd>

        <dt class="col-sm-3">Report Date</dt>
        <dd class="col-sm-9">@Model.ReportDate.ToShortDateString()</dd>
    </dl>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="text-center mt-3">
        <input type="submit" value="Delete" class="btn btn-danger" />
        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary" })
    </div>
}
