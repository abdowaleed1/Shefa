@model IEnumerable<SmartHealthcare.Models.Prescription>

@{
    ViewBag.Title = "Prescriptions";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2><i class="fas fa-prescription"></i> Prescriptions</h2>
        </div>
        <div class="col-md-6 text-end">
            @if (User.IsInRole("Admin") || User.IsInRole("Doctor"))
            {
                <a href="@Url.Action("Create", "Prescriptions")" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Create New Prescription
                </a>
            }
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        @if (Model != null && Model.Any())
        {
            foreach (var prescription in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card prescription-card h-100 shadow">
                        <div class="card-header bg-success text-white">
                            <h5 class="mb-0">
                                <i class="fas fa-prescription-bottle-alt"></i> Prescription #@prescription.PrescriptionID
                            </h5>
                            <small>@prescription.DateIssued.ToString("dd MMM yyyy, hh:mm tt")</small>
                        </div>

                        <div class="card-body">
                            <p class="mb-2">
                                <strong><i class="fas fa-user"></i> Patient:</strong><br />
                                @prescription.Appointment?.Patient?.FullName
                            </p>

                            <p class="mb-2">
                                <strong><i class="fas fa-user-md"></i> Doctor:</strong><br />
                                @prescription.Doctor?.FullName
                            </p>

                            <hr />

                            <p class="mb-2">
                                <strong><i class="fas fa-pills"></i> Medication:</strong><br />
                                @if (prescription.Medication != null && prescription.Medication.Length > 100)
                                {
                                    @prescription.Medication.Substring(0, 100)<text>...</text>
                                }
                                else
                                {
                                    @prescription.Medication
                                }
                            </p>

                            @if (!string.IsNullOrEmpty(prescription.Dosage))
                            {
                                <p class="mb-2">
                                    <strong><i class="fas fa-hourglass-half"></i> Dosage:</strong><br />
                                    <span class="text-primary">@prescription.Dosage</span>
                                </p>
                            }

                            @if (prescription.Duration > 0)
                            {
                                <p class="mb-0">
                                    <strong><i class="fas fa-calendar-alt"></i> Duration:</strong>
                                    <span class="badge bg-warning text-dark">@prescription.Duration days</span>
                                </p>
                            }
                        </div>

                        <div class="card-footer bg-light">
                            <div class="btn-group w-100" role="group">
                                <a href="@Url.Action("Details", "Prescriptions", new { id = prescription.PrescriptionID })"
                                   class="btn btn-sm btn-info">
                                    <i class="fas fa-eye"></i> View
                                </a>

                                @if (User.IsInRole("Admin") || User.IsInRole("Doctor"))
                                {
                                    <a href="@Url.Action("Edit", "Prescriptions", new { id = prescription.PrescriptionID })"
                                       class="btn btn-sm btn-warning">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                }

                                @if (User.IsInRole("Admin"))
                                {
                                    <a href="@Url.Action("Delete", "Prescriptions", new { id = prescription.PrescriptionID })"
                                       class="btn btn-sm btn-danger"
                                       onclick="return confirm('Are you sure you want to delete this prescription?');">
                                        <i class="fas fa-trash"></i> Delete
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-info text-center">
                    <i class="fas fa-info-circle fa-3x mb-3"></i>
                    <h4>No Prescriptions Yet</h4>
                    <p>No prescriptions have been created yet.</p>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .prescription-card {
        border: none;
        border-radius: 10px;
        transition: transform 0.2s;
    }

        .prescription-card:hover {
            transform: translateY(-5px);
        }

    .card-header {
        border-radius: 10px 10px 0 0 !important;
    }
</style>
