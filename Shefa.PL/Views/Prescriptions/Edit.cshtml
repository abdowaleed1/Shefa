@model SmartHealthcare.Models.Prescription

@{
    ViewBag.Title = "Edit Prescription";
}

<h2>Edit Prescription</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(m => m.PrescriptionID)

    <div class="form-container">
        <div class="form-group">
            @Html.LabelFor(m => m.AppointmentID, "Appointment")
            @Html.DropDownList("AppointmentID", null, "-- Select Appointment --", new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.DrugName)
            @Html.TextBoxFor(m => m.DrugName, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Dosage)
            @Html.TextBoxFor(m => m.Dosage, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Instructions)
            @Html.TextAreaFor(m => m.Instructions, new { @class = "form-control", rows = 3 })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.DateIssued)
            @Html.TextBoxFor(m => m.DateIssued, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
        </div>

        <button type="submit" class="btn btn-primary">Save Changes</button>
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
    </div>
}
