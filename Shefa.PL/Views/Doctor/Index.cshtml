@model Shefa.PL.Models.DoctorDashboardViewModel
@{
    ViewData["Title"] = "Doctor Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main role="main">

    <div class="container-fluid py-4">
        <div class="row g-4">
            <div class="col-lg-3">
                <div class="card card-custom text-center p-4 mb-4">
                    <h4 class="fw-bold">@Model.Doctor?.User?.FirstName @Model.Doctor?.User?.LastName</h4>
                    <span class="badge badge-soft-info mb-3">@Model.Doctor?.Specialty</span>
                    <a class="btn btn-outline-primary btn-sm rounded-pill w-100 fw-bold" asp-action="Edit" asp-controller="Doctor" asp-route-id="@Model.Doctor?.Id">Edit Profile</a>
                </div>

                <div class="card card-custom p-4">
                    <h6 class="fw-bold mb-3 text-uppercase small text-muted">My Clinics</h6>
                    <ul class="list-unstyled mb-0">
                        @if (Model.Doctor?.Clinic != null)
                        {
                            <li class="mb-3 d-flex align-items-center">
                                <div class="bg-light p-2 rounded me-3"><i class="fas fa-hospital text-primary-custom"></i></div>
                                <div>
                                    <span class="fw-bold d-block">@Model.Doctor.Clinic.Name</span>
                                </div>
                            </li>
                        }
                        else
                        {
                            <li class="text-muted">No clinic assigned</li>
                        }
                    </ul>
                </div>
            </div>

            <div class="col-lg-9">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h3 class="fw-bold">Today's Schedule</h3>
                </div>

                <div class="card card-custom overflow-hidden">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="ps-4 py-3">Time</th>
                                    <th class="py-3">Patient</th>
                                    <th class="py-3">Status</th>
                                    <th class="py-3 text-end pe-4">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Slots != null && Model.Slots.Any())
                                {
                                    foreach (var slot in Model.Slots)
                                    {
                                        var appt = slot.Appointment;
                                        <tr>
                                            <td class="ps-4 fw-bold text-primary-custom">@slot.StartTime.ToString()</td>
                                            <td>
                                                @if (appt != null && appt.Patient != null)
                                                {
                                                    <div class="d-flex align-items-center">
                                                        <div class="bg-light rounded-circle text-center me-2 fw-bold text-primary-custom" style="width:35px; height:35px; line-height:35px;">@(appt.Patient.User?.FirstName?.FirstOrDefault() ?? 'P')@(appt.Patient.User?.LastName?.FirstOrDefault() ?? ' ')</div>
                                                        <div>
                                                            <span class="fw-bold d-block">@appt.Patient.User?.FirstName @appt.Patient.User?.LastName</span>
                                                            <span class="badge badge-soft-secondary" style="font-size: 0.7em;">@appt.ConfirmationCode</span>
                                                        </div>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <span class="text-muted fst-italic">-- Available Slot --</span>
                                                }
                                            </td>
                                            <td>
                                                @if (appt != null)
                                                {
                                                    <span class="badge badge-soft-success">@appt.AppointmentStatus</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-soft-primary">Open</span>
                                                }
                                            </td>
                                            <td class="text-end pe-4">
                                                @if (appt != null)
                                                {
                                                    <button class="btn btn-sm btn-primary-custom px-3 consult-btn" data-bs-toggle="modal" data-bs-target="#recordModal" data-appointment-id="@appt.Id" data-patient-id="@appt.PatientId">Consult</button>
                                                }
                                                else
                                                {
                                                    <button class="btn btn-sm btn-outline-secondary rounded-pill px-3">Block</button>
                                                }
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr><td colspan="4" class="text-center text-muted py-4">No appointments for today.</td></tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="recordModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content border-0 rounded-4">
                <div class="modal-header bg-primary-custom text-white rounded-top-4">
                    <h5 class="modal-title">Consultation Record</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body p-4">
                    <form id="consultForm">
                        <input type="hidden" id="appointmentId" name="appointmentId" />
                        <div class="mb-3">
                            <label class="form-label fw-bold">Primary Diagnosis</label>
                            <input type="text" class="form-control rounded-3" id="diagnosis" name="diagnosis" placeholder="e.g. Hypertension">
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Treatment Plan / Prescription</label>
                            <textarea class="form-control rounded-3" id="treatment" name="treatment" rows="3"></textarea>
                        </div>
                        <div class="form-check bg-light p-3 rounded-3">
                            <input class="form-check-input" type="checkbox" id="markComplete" checked>
                            <label class="form-check-label fw-bold" for="markComplete">Mark Appointment as Completed</label>
                        </div>
                    </form>
                </div>
                <div class="modal-footer border-0">
                    <button type="button" id="saveConsultBtn" class="btn btn-primary-custom px-4">Save Medical Record</button>
                </div>
            </div>
        </div>
    </div>
</main>

<script>
    (function () {
        const recordModal = document.getElementById('recordModal');
        const appointmentIdInput = document.getElementById('appointmentId');
        const saveBtn = document.getElementById('saveConsultBtn');

        document.querySelectorAll('.consult-btn').forEach(btn => {
            btn.addEventListener('click', function (e) {
                const apptId = btn.getAttribute('data-appointment-id');
                appointmentIdInput.value = apptId;
                document.getElementById('diagnosis').value = '';
                document.getElementById('treatment').value = '';
            });
        });

        saveBtn.addEventListener('click', async function () {
            const apptId = appointmentIdInput.value;
            const diagnosis = document.getElementById('diagnosis').value || '';
            const treatment = document.getElementById('treatment').value || '';

            const noteContent = `Diagnosis: ${diagnosis}\nTreatment: ${treatment}`;

            try {
                const res = await fetch('/Doctor/SaveConsult', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded'
                    },
                    body: new URLSearchParams({ appointmentId: apptId, noteContent })
                });
                const data = await res.json();
                if (data && data.success) {
                    // hide modal
                    const bsModal = bootstrap.Modal.getInstance(recordModal);
                    if (bsModal) bsModal.hide();
                } else {
                    alert('Could not save consult: ' + (data.message || 'Unknown error'));
                }
            } catch (err) {
                alert('Error saving consult: ' + err.message);
            }
        });
    })();
</script>

