@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main role="main">

    <div class="container-fluid py-4">
        <div class="row g-4">
            <div class="col-lg-3">
                <div class="card card-custom text-center p-4 mb-4">
                    <img src="https://via.placeholder.com/120" class="rounded-circle shadow mb-3" alt="Profile">
                    <h4 class="fw-bold">Dr. Emily White</h4>
                    <span class="badge badge-soft-info mb-3">Dermatology</span>
                    <a class="btn btn-outline-primary btn-sm rounded-pill w-100 fw-bold" asp-action="Edit" asp-controller="Doctor">Edit Profile</a>
                </div>

                <div class="card card-custom p-4">
                    <h6 class="fw-bold mb-3 text-uppercase small text-muted">My Clinics</h6>
                    <ul class="list-unstyled mb-0">
                        <li class="mb-3 d-flex align-items-center">
                            <div class="bg-light p-2 rounded me-3"><i class="fas fa-hospital text-primary-custom"></i></div>
                            <div>
                                <span class="fw-bold d-block">City Center Clinic</span> <small class="text-muted">Mon, Wed</small>
                            </div>
                        </li>
                        <li class="d-flex align-items-center">
                            <div class="bg-light p-2 rounded me-3"><i class="fas fa-clinic-medical text-primary-custom"></i></div>
                            <div>
                                <span class="fw-bold d-block">Shefa Hub</span>
                                <small class="text-muted">Tue, Thu</small>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="col-lg-9">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h3 class="fw-bold">Today's Schedule</h3>
                </div>

                <div class="card card-custom overflow-hidden">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="ps-4 py-3">Time</th>
                                    <th class="py-3">Patient</th>
                                    <th class="py-3">Status</th>
                                    <th class="py-3 text-end pe-4">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td class="ps-4 fw-bold text-primary-custom">09:00 AM</td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="bg-light rounded-circle text-center me-2 fw-bold text-primary-custom" style="width:35px; height:35px; line-height:35px;">AH</div>
                                            <div>
                                                <span class="fw-bold d-block">Ahmed Hassan</span>
                                                <span class="badge badge-soft-secondary" style="font-size: 0.7em;">#SHF-221</span>
                                            </div>
                                        </div>
                                    </td>
                                    <td><span class="badge badge-soft-success">Checked-In</span></td>
                                    <td class="text-end pe-4">
                                        <button class="btn btn-sm btn-primary-custom px-3" data-bs-toggle="modal" data-bs-target="#recordModal">
                                            Consult
                                        </button>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="ps-4 fw-bold text-dark">09:30 AM</td>
                                    <td class="text-muted fst-italic">-- Available Slot --</td>
                                    <td><span class="badge badge-soft-primary">Open</span></td>
                                    <td class="text-end pe-4">
                                        <button class="btn btn-sm btn-outline-secondary rounded-pill px-3">Block</button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="recordModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content border-0 rounded-4">
                <div class="modal-header bg-primary-custom text-white rounded-top-4">
                    <h5 class="modal-title">Consultation Record</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body p-4">
                    <form>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Primary Diagnosis</label>
                            <input type="text" class="form-control rounded-3" placeholder="e.g. Hypertension">
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Treatment Plan / Prescription</label>
                            <textarea class="form-control rounded-3" rows="3"></textarea>
                        </div>
                        <div class="form-check bg-light p-3 rounded-3">
                            <input class="form-check-input" type="checkbox" id="markComplete" checked>
                            <label class="form-check-label fw-bold" for="markComplete">Mark Appointment as Completed</label>
                        </div>
                    </form>
                </div>
                <div class="modal-footer border-0">
                    <button type="button" class="btn btn-primary-custom px-4">Save Medical Record</button>
                </div>
            </div>
        </div>
    </div>
</main>

