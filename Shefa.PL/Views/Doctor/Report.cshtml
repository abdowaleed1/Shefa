﻿@model IEnumerable<SmartHealthcare.Models.MedicalReport>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "MyReports";
}

<div class="container mt-4">
    <h4 class="mb-3">Medical Reports Overview</h4>

    <table class="table table-bordered shadow-sm bg-white">
        <thead class="table-dark">
            <tr>
                <th>Report ID</th>
                <th>Patient</th>
                <th>Report Type</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var report in Model)
                {
                    <tr>
                        <td>@report.MedicalReportID</td>
                        <td>@report.Appointment.Patient.PatientName</td>
                        <td>@report.ReportType</td>
                        <td>@report.ReportDate.ToString("dd MMM yyyy")</td>
                        <td>
                            @Html.ActionLink("View", "Details", new { id = report.MedicalReportID }, new { @class = "btn btn-sm btn-outline-primary" })
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center text-muted">No reports found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>