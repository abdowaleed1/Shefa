@{
    ViewBag.Title = "Doctor Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="text-primary">
                <i class="fas fa-stethoscope"></i> Welcome, @ViewBag.DoctorName
            </h2>
            <p class="text-muted">Your Medical Practice Dashboard</p>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card bg-primary text-white shadow-sm stat-card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0">Total Appointments</h6>
                            <h2 class="mt-2 mb-0">@ViewBag.TotalAppointments</h2>
                        </div>
                        <div>
                            <i class="fas fa-calendar-check fa-3x opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card bg-success text-white shadow-sm stat-card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0">Today's Appointments</h6>
                            <h2 class="mt-2 mb-0">@ViewBag.TodayAppointments</h2>
                        </div>
                        <div>
                            <i class="fas fa-calendar-day fa-3x opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card bg-info text-white shadow-sm stat-card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0">Completed</h6>
                            <h2 class="mt-2 mb-0">@ViewBag.CompletedAppointments</h2>
                        </div>
                        <div>
                            <i class="fas fa-check-circle fa-3x opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card bg-warning text-white shadow-sm stat-card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0">Total Patients</h6>
                            <h2 class="mt-2 mb-0">@ViewBag.TotalPatients</h2>
                        </div>
                        <div>
                            <i class="fas fa-users fa-3x opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-bolt text-warning"></i> Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-2">
                            <a href="@Url.Action("MyAppointments", "Doctor")" class="btn btn-primary btn-block btn-lg">
                                <i class="fas fa-calendar-alt"></i><br>My Appointments
                            </a>
                        </div>
                        <div class="col-md-3 mb-2">
                            <a href="@Url.Action("MyPatients", "Doctor")" class="btn btn-success btn-block btn-lg">
                                <i class="fas fa-user-injured"></i><br>My Patients
                            </a>
                        </div>
                        <div class="col-md-3 mb-2">
                            <a href="@Url.Action("MySchedule", "Doctor")" class="btn btn-info btn-block btn-lg">
                                <i class="fas fa-clock"></i><br>My Schedule
                            </a>
                        </div>
                        <div class="col-md-3 mb-2">
                            <a href="@Url.Action("MyProfile", "Doctor")" class="btn btn-warning btn-block btn-lg text-white">
                                <i class="fas fa-user"></i><br>My Profile
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Upcoming Appointments -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="fas fa-calendar-alt"></i> Upcoming Appointments</h5>
                    <a href="@Url.Action("MyAppointments", "Doctor")" class="btn btn-sm btn-outline-primary">
                        View All <i class="fas fa-arrow-right"></i>
                    </a>
                </div>
                <div class="card-body">
                    @if (ViewBag.UpcomingAppointments != null && ((System.Collections.Generic.List<SmartHealthcare.Models.Appointment>)ViewBag.UpcomingAppointments).Count > 0)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="thead-light">
                                    <tr>
                                        <th><i class="far fa-calendar"></i> Date & Time</th>
                                        <th><i class="fas fa-user"></i> Patient Name</th>
                                        <th><i class="fas fa-envelope"></i> Email</th>
                                        <th><i class="fas fa-notes-medical"></i> Reason</th>
                                        <th><i class="fas fa-info-circle"></i> Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var appointment in (System.Collections.Generic.List<SmartHealthcare.Models.Appointment>)ViewBag.UpcomingAppointments)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@appointment.AppointmentTime.ToString("MMM dd, yyyy")</strong><br>
                                                <small class="text-muted">@appointment.AppointmentTime.ToString("hh:mm tt")</small>
                                            </td>
                                            <td>@(appointment.Patient?.FullName ?? "N/A")</td>
                                            <td>@(appointment.Patient?.Email ?? "N/A")</td>
                                            <td>@appointment.Reason</td>
                                            <td>
                                                <span class="badge badge-success">@appointment.Status</span>
                                            </td>
                                            <td>
                                                <a href="@Url.Action("Details", "Appointments", new { id = appointment.AppointmentID })"
                                                   class="btn btn-sm btn-info" title="View Details">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                @using (Html.BeginForm("UpdateStatus", "Appointments", FormMethod.Post, new { style = "display:inline;" }))
                                                {
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="id" value="@appointment.AppointmentID" />
                                                    <input type="hidden" name="status" value="Completed" />
                                                    <button type="submit" class="btn btn-sm btn-success" title="Mark as Completed">
                                                        <i class="fas fa-check"></i>
                                                    </button>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-calendar-times fa-4x text-muted mb-3"></i>
                            <h5 class="text-muted">No upcoming appointments</h5>
                            <p class="text-muted">You don't have any scheduled appointments at the moment.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .opacity-50 {
        opacity: 0.5;
    }

    .stat-card {
        border-radius: 10px;
        transition: transform 0.3s;
    }

        .stat-card:hover {
            transform: translateY(-5px);
        }

    .card {
        border-radius: 10px;
    }

    .btn-block {
        padding: 20px;
        font-weight: 600;
    }

    .table td, .table th {
        vertical-align: middle;
    }
</style>