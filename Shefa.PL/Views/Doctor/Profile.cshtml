@model SmartHealthcare.Models.Doctor
@{
    ViewBag.Title = "My Profile";
    Layout = "~/Views/Shared/_Layout.cshtml"; // change if you use a different layout
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">👨‍⚕️ Doctor Profile</h3>
        </div>
        <div class="card-body p-4">
            @if (Model != null)
            {
                <div class="row mb-4">
                    <div class="col-md-4 text-center">
                        <img src="~/Content/Images/doctor-avatar.png"
                             class="img-fluid rounded-circle border"
                             alt="Doctor Profile Photo"
                             style="width: 150px; height: 150px; object-fit: cover;" />
                        <h4 class="mt-3 text-primary">@Model.FullName</h4>
                        <p class="text-muted">@Model.Specialization</p>
                    </div>

                    <div class="col-md-8">
                        <table class="table table-bordered">
                            <tr>
                                <th>Title</th>
                                <td>@Model.Title</td>
                            </tr>
                            <tr>
                                <th>First Name</th>
                                <td>@Model.FirstName</td>
                            </tr>
                            <tr>
                                <th>Last Name</th>
                                <td>@Model.LastName</td>
                            </tr>
                            <tr>
                                <th>Email</th>
                                <td>@Model.Email</td>
                            </tr>
                            <tr>
                                <th>Contact Number</th>
                                <td>@Model.ContactNumber</td>
                            </tr>
                            <tr>
                                <th>Specialization</th>
                                <td>@Model.Specialization</td>
                            </tr>
                            <tr>
                                <th>Medical License No.</th>
                                <td>@Model.MedicalLicenseNumber</td>
                            </tr>
                            <tr>
                                <th>Hiring Date</th>
                                <td>@Model.HiringDate.ToString("dd MMM yyyy")</td>
                            </tr>
                        </table>

                        <div class="mt-3 text-end">
                            <a href="@Url.Action("EditProfile", "Doctor")" class="btn btn-outline-primary me-2">
                                ✏️ Edit Profile
                            </a>
                            <a href="@Url.Action("Dashboard", "Doctor")" class="btn btn-secondary">
                                ⬅ Back to Dashboard
                            </a>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-warning text-center">
                    Profile not found. Please complete your profile.
                    <a href="@Url.Action("CompleteProfile", "Doctor")" class="btn btn-sm btn-warning ms-2">Complete Now</a>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .container {
        max-width: 900px;
    }

    .table th {
        width: 35%;
        background: #f8f9fa;
    }
</style>
