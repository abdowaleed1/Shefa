@model IEnumerable<SmartHealthcare.Models.Bill>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Bills";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="mb-0">Billing Information</h4>
        @Html.ActionLink("➕ Add New Bill", "CreateBill", "Doctor", null, new { @class = "btn btn-success" })
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success text-center">@TempData["Success"]</div>
    }

    @if (Model != null && Model.Any())
    {
        <table class="table table-hover shadow-sm bg-white">
            <thead class="table-dark">
                <tr>
                    <th>Bill ID</th>
                    <th>Patient</th>
                    <th>Date</th>
                    <th>Total Amount</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var bill in Model)
                {
                    <tr>
                        <td>@bill.BillID</td>
                        <td>@bill.Appointment.Patient.PatientName</td>
                        <td>@bill.Appointment.AppointmentTime.ToString("dd MMM yyyy")</td>
                        <td>₹@bill.TotalAmount</td>
                        <td>
                            @if (bill.PaymentStatus.ToLower() == "paid")
                            {
                                <span class="badge bg-success">Paid</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Unpaid</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info">No bills found.</div>
    }
</div>