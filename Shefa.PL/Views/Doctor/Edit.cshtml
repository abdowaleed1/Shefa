@model Models.Entities.Doctor
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main role="main">
    <div class="container py-4">
        <h3 class="fw-bold mb-4">Edit Doctor Profile</h3>

        <div class="card card-custom p-4 p-md-5">
            <form asp-action="Edit" asp-controller="Doctor" asp-route-id="@Model?.Id" method="post">
                @Html.AntiForgeryToken()

                <h5 class="fw-bold text-primary-custom mb-4 border-bottom pb-2">Professional Credentials</h5>

                <div class="row g-3 mb-4">
                    <div class="col-md-6">
                        <label for="Specialty" class="form-label fw-bold">Specialty</label>
                        <select asp-for="Specialty" id="Specialty" class="form-select rounded-3 p-3">
                            <option value="">-- Select Specialty --</option>
                            <option value="Dermatology" selected="@(Model?.Specialty == "Dermatology")">Dermatology</option>
                            <option value="Cardiology" selected="@(Model?.Specialty == "Cardiology")">Cardiology</option>
                            <option value="General" selected="@(Model?.Specialty == "General")">General</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Medical License ID</label>
                        <input type="text" class="form-control rounded-3 p-3" value="@Model?.User?.Id" disabled>
                    </div>
                    <div class="col-12">
                        <label for="Biography" class="form-label fw-bold">Biography / Summary</label>
                        <textarea asp-for="Biography" class="form-control rounded-3" id="Biography" rows="4">@Model?.Biography</textarea>
                    </div>
                </div>

                <h5 class="fw-bold text-primary-custom mb-4 border-bottom pb-2 mt-5">Working Schedule & Clinics</h5>

                <div class="row g-3 mb-4">
                    <div class="col-12">
                        <label class="form-label fw-bold">Assigned Clinic</label>
                        <input type="text" class="form-control rounded-3 p-3" value="@Model?.Clinic?.Name" disabled>
                    </div>
                    <div class="col-md-6">
                        <label for="ConsultationPrice" class="form-label fw-bold">Consultation Fee ($)</label>
                        <input asp-for="ConsultationPrice" type="number" step="0.01" class="form-control rounded-3 p-3" id="ConsultationPrice" />
                    </div>
                    <div class="col-md-6">
                        <label for="ConsultationTime" class="form-label fw-bold">Consultation Time (minutes)</label>
                        <input asp-for="ConsultationTime" type="number" class="form-control rounded-3 p-3" id="ConsultationTime" />
                    </div>
                </div>

                <h5 class="fw-bold text-primary-custom mb-4 border-bottom pb-2 mt-5">Personal Information</h5>

                <div class="row g-3 mb-4">
                    <div class="col-md-6">
                        <label class="form-label fw-bold">First Name</label>
                        <input type="text" class="form-control rounded-3 p-3" value="@Model?.User?.FirstName" disabled>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Last Name</label>
                        <input type="text" class="form-control rounded-3 p-3" value="@Model?.User?.LastName" disabled>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Email Address</label>
                        <input type="email" class="form-control rounded-3 p-3" value="@Model?.User?.Email" disabled>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Phone Number</label>
                        <input type="tel" class="form-control rounded-3 p-3" value="@Model?.User?.PhoneNumber" disabled>
                    </div>
                </div>


                <div class="d-flex justify-content-end gap-3 mt-5">
                    <a asp-action="Index" asp-controller="Doctor" asp-route-doctorId="@Model?.Id" class="btn btn-outline-secondary rounded-pill px-4 fw-bold">Cancel</a>
                    <button type="submit" class="btn btn-primary-custom rounded-pill px-4 fw-bold">
                        <i class="fas fa-save me-2"></i>Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</main>

