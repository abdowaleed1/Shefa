
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main role="main">
    <div class="container py-4">
        <h3 class="fw-bold mb-4">Edit Doctor Profile</h3>

        <div class="card card-custom p-4 p-md-5">
            <form>
                <h5 class="fw-bold text-primary-custom mb-4 border-bottom pb-2">Professional Credentials</h5>

                <div class="row g-3 mb-4">
                    <div class="col-md-6">
                        <label for="specialty" class="form-label fw-bold">Specialty</label>
                        <select id="specialty" class="form-select rounded-3 p-3">
                            <option selected>Dermatology</option>
                            <option>Cardiology</option>
                            <option>General</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label for="license" class="form-label fw-bold">Medical License ID</label>
                        <input type="text" class="form-control rounded-3 p-3" id="license" value="DR-872322" disabled>
                    </div>
                    <div class="col-12">
                        <label for="bio" class="form-label fw-bold">Biography / Summary</label>
                        <textarea class="form-control rounded-3" id="bio" rows="4">Highly experienced dermatologist with a focus on cosmetic treatments and chronic skin conditions.</textarea>
                    </div>
                </div>

                <h5 class="fw-bold text-primary-custom mb-4 border-bottom pb-2 mt-5">Working Schedule & Clinics</h5>

                <div class="row g-3 mb-4">
                    <div class="col-12">
                        <label for="workingDays" class="form-label fw-bold">Working Days (Select all that apply)</label>
                        <select id="workingDays" class="form-select rounded-3 p-3" multiple>
                            <option selected>Monday</option>
                            <option>Tuesday</option>
                            <option selected>Wednesday</option>
                            <option>Thursday</option>
                            <option>Friday</option>
                            <option>Saturday</option>
                        </select>
                        <small class="text-muted">Hold Ctrl/Cmd to select multiple days.</small>
                    </div>
                    <div class="col-md-6">
                        <label for="fee" class="form-label fw-bold">Consultation Fee ($)</label>
                        <input type="number" class="form-control rounded-3 p-3" id="fee" value="350">
                    </div>
                </div>

                <h5 class="fw-bold text-primary-custom mb-4 border-bottom pb-2 mt-5">Personal Information</h5>

                <div class="row g-3 mb-4">
                    <div class="col-md-6">
                        <label for="firstName" class="form-label fw-bold">First Name</label>
                        <input type="text" class="form-control rounded-3 p-3" id="firstName" value="Emily">
                    </div>
                    <div class="col-md-6">
                        <label for="lastName" class="form-label fw-bold">Last Name</label>
                        <input type="text" class="form-control rounded-3 p-3" id="lastName" value="White">
                    </div>
                    <div class="col-md-6">
                        <label for="email" class="form-label fw-bold">Email Address</label>
                        <input type="email" class="form-control rounded-3 p-3" id="email" value="emily.white@shefa.com">
                    </div>
                    <div class="col-md-6">
                        <label for="phone" class="form-label fw-bold">Phone Number</label>
                        <input type="tel" class="form-control rounded-3 p-3" id="phone" value="+201298765432">
                    </div>
                </div>


                <div class="d-flex justify-content-end gap-3 mt-5">
                    <a href="Doctor.html" class="btn btn-outline-secondary rounded-pill px-4 fw-bold">Cancel</a>
                    <button type="submit" class="btn btn-primary-custom rounded-pill px-4 fw-bold">
                        <i class="fas fa-save me-2"></i>Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</main>

